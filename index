function shuffle(array) {
  array.sort(() => Math.random() - 0.5);
}
let d;
function dod2() {document.getElementById("bod").innerHTML="";
	a = document.getElementById("here").value;
	/*d = document.getElementById("here3").value;*/
	d = a.split("https://manatoki")[1].substr(0,3);
	<!--a = a.replaceAll("\n", "<br/>");-->
	b = a.split(d + ".");
	d*=1;
	d +=1;
	c = a.split(". ");
	document.getElementById("here").value="";
	for(let i=0;i<b.length-1;i++){
		document.getElementById("bod").innerHTML += b[i] + d + ".";
	}
	document.getElementById("bod").innerHTML += b[b.length-1];
	document.getElementById("bod").select();
	document.execCommand("copy");
	document.getElementById("bod").setSelectionRange(0, 0);  //선택영역 초기화
	
}function dod6() {document.getElementById("bod").innerHTML="";
